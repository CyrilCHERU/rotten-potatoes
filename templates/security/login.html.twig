{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-light px-5">
                <h1>Connexion</h1>
                <form action="" method="post">
                    <div class="form-group"><input class="form-control" name="_username" placeholder="Email de connexion" type="email"></div>
                    <div class="form-group"><input class="form-control" name="_password" placeholder="Mot de passe" type="password"></div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">
                            <i class="fas fa-lock-open"></i>
                            Connexion !
                        </button>
                        <a class="btn btn-link" href="#">
                            <i class="fas fa-user"></i>
                            Je n'ai pas encore de compte
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}
