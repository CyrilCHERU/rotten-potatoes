<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-12/css/all.min.css' rel='stylesheet'/>
            <link href="https://bootswatch.com/4/lumen/bootstrap.min.css" rel="stylesheet">
            <link href="/css/custom.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <a class="navbar-brand" href="/">Rotten Potatoes</a>
            <button aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarColor01" data-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    {{ render(controller('App\\Controller\\MovieController::menuCategories')) }}
                </ul>

                <ul class="navbar-nav mr-2">
                    <li class="nav-item">
                        <a href="{{ path('security_register') }}" class="btn btn-primary mr-2">
                            <i class="fas fa-user"></i>
                            Cr√©er un compte
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('security_login') }}" class="btn btn-success">
                            <i class="fas fa-lock-open"></i>
                            Connexion
                        </a>
                    </li>

                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" placeholder="Search" type="text">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>

        <div class="container pt-5"> {% block body %}{% endblock %}

            </div>
            {% block javascripts %}{% endblock %}
        </body>
    </html>
